{
  "name": "fec-style",
  "version": "0.0.0",
  "description": "Shared styles for FEC Beta",
  "repository": {
    "type": "git",
    "url": "git://github.com/18F/fec-style.git"
  },
  "scripts": {
    "build": "npm run build-sass && npm run build-js && npm run build-styleguide",
    "build-js": "browserify fec-template/public/init.js > fec-template/public/main.js",
    "build-sass": "node-sass scss/ -o css/",
    "build-styleguide": "kss-node --config kss-config.json && cd fec-template/ && npm run less",
    "watch": "watch 'npm run build' ./scss",
    "watch-sass": "node-sass scss/ -o css/ --watch"
  },
  "dependencies": {
    "eventemitter2": "0.4.14",
    "jquery": "2.1.4",
    "list.js": "git://github.com/jmcarp/list.js.git",
    "node-bourbon": "4.2.2",
    "node-neat": "1.7.1-beta1",
    "underscore": "1.8.3"
  },
  "devDependencies": {
    "browserify": "^11.0.1",    
    "kss": "^2.1.0",
    "less": "^2.5.1",
    "node-sass": "^3.2.0",
    "watch": "^0.16.0"
  }
}